@{
    ViewData["Title"] = "Plano de Contas";
    @* Layout = null; *@
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<button type="button" class="btn btn-info" onclick="Register()">Cadastrar Plano Conta</button>


<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Descrição</th>
      <th scope="col">Tipo</th>
      <th scope="col">#</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    @{
      foreach(var item in (List<AccountModel>)ViewBag.ListAccount)
      {
        <tr>
          <td>@item.Id</td>
          <td>@item.Description</td>
          <td>@item.Type</td>
          <td><button type="button" class="btn btn-warning" onclick="Edit(@item.Id)">Editar</button></td>         
          <td>@Html.ActionLink("Excluir", "Delete", "Account", new { Id = @item.Id}, new { @class = "btn btn-danger"})</td> 
        </tr>
      }
    }
  </tbody>
</table>

<script>
  function Register() {
    window.location.href = "../Account/Register";
  }

  function Edit(id){
    window.location.href = "../Account/Register/" + id;
  }

</script>