@model TransactionModel

@{
    ViewData["Title"] = "Registrar nova transação";
}

<form asp-controller="Transaction" asp-action="Register" method="post">
    <div class="container">
        <div class="mb-3">
            <label class="form-label">Data</label>
            <input type="hidden" id="txtId" class="form-control" asp-for="Id" />
            <input type="date" id="txtData" class="form-control" asp-for="Date" value="2023-01-01"/>
        </div>

         <div class="mb-3">
            <label class="form-label">Valor</label>
            <input type="text" id="txtValor" class="form-control" asp-for="Value" step="0.01" />
        </div>

         <div class="mb-3">
            <label class="form-label">Item Plano Conta</label>
            @Html.DropDownListFor(m => m.AccountId, Model.Accounts, new { @class="form-select" } )
        </div>

         <div class="mb-3">
            <label class="form-label">Histórico</label>
            <input type="text" id="txtNome" class="form-control" asp-for="History" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary btn-lg">Salvar</button>
            <button type="button" class="btn btn-secondary btn-lg" onclick="Back()">Cancelar</button>
        </div>

    </div>
</form>

<script>
  function Back(){
    window.location.href = "../Transaction"
  }
</script>